---
interface Props {
    active: boolean
}
import navlinks from "../configs/navlinks.json";
const {active} = Astro.props;
---

<nav class="flex justify-around py-4 backdrop-blur-md nav text-center z-20 md:text-[20px] text-[16px] fixed w-[100%] m-auto left-0 right-0">
    <div class="flex gap-x-1">
        <a href={navlinks[0].link}>FxckCode</a>
        <p>|</p>
        <a href={navlinks[1].link} class={`${active == true ? "active" : " "} button`}> {navlinks[1].name}</a>
    </div>
</nav>

<style lang="scss">
    .button {
        &:hover {
            transition: 1s all;
            border-bottom: 1px solid white;
        }
    }
    .active {
        border-bottom: 1px solid white;
    }
</style>