---
export interface Props {
	title: string;
	active: boolean;
}

const { title, active } = Astro.props;
import Navbar from '../components/Navbar.astro'
import './Layout.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-primary text-white text-[12px] md:text-[20px]">
		<Navbar active={active}/>
		<div class="w-screen m-auto shadow">
			<img src="cover.jpg" alt="" class="">
		</div>
		<slot />
	</body>
</html>
<style lang="scss">
	body {
		font-family: 'JetBrains Mono';
		min-height: 100%;
	}
	html {
		scroll-behavior: smooth;
	}
	img {
		display: block;
		object-fit: cover;
		width: 100%;
		height: 40vh;
		object-position: center 50%;
		position: absolute;
		z-index: -1;
	}
</style>
